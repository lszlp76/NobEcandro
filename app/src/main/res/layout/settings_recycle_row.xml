<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

android:backgroundTint="@color/colorForOnBoardingLight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/settingsRecyclerViewImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"

        app:tint="@color/colorForListViewLight"></ImageView>

    <TextView
        android:id="@+id/settingsRecyclerViewtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:text="deneme"
        android:textColor="@color/colorForListViewLight"
        android:textSize="21sp" />


</LinearLayout>